    <div class="flex-col" style="width: 100%; height: 80%; background-color: green">
        <div class="flex-row grid-holder" style="display: none">
        <!--holds grid-->
        </div>

        <div class="flex-col jep-column template" style="display: none">
            <div class="jep-square category">Catagory</div>
        </div>

        <div class="fullscreen-question flex-col" style="display: none">
            <div class="question-content" style="margin: 3rem"></div>
        </div>
    </div>
    <div style="width:100%;height:20%;background-color: red">

    </div>
</div>


