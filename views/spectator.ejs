<% include partials/header %>

<style>
    .jep-square {
        background-color: midnightblue;
        color: #ffdc74;
        padding: 2vh;
        margin: 1vh;
        width: 10vw;
        height: 6vw;
        text-align: center;
        font-family: helvetica;
        font-size: 2.5vw;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .jep-column {
        align-content: space-around;
    }

    .grid-holder {
        width: 100%;
    }

    .square-hover {
        outline: dashed 5px orangered;
    }

    .fullscreen-question {
        font-size: 300%;
        background-color: midnightblue;
        color: white;
        text-align: center;
        width: 100%;
        height: 100%;
    }

    .category {
        font-size: 1.5vw;
        margin-bottom: 1.5vh
    }

    .flex-col {
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .flex-row {
        display: flex;
        justify-content: center;
    }

    .content {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }

